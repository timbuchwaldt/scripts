-	$(INSTALL_DATA) man8/thin_metadata_size.8 $(MANPATH)/man8
-	$(INSTALL_DATA) man8/thin_metadata_pack.8 $(MANPATH)/man8
-	$(INSTALL_DATA) man8/thin_metadata_unpack.8 $(MANPATH)/man8
